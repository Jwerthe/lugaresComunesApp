<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Splash Screen Container -->
    <LinearLayout
        android:id="@+id/splashContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo de la app -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/mainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header fijo -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:paddingTop="16dp">

            <!-- Top bar con título y iconos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <!-- Título de la app -->
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lugares Comunes"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59"
                    android:fontFamily="sans-serif-medium" />

                <!-- Icono de búsqueda -->
                <ImageView
                    android:id="@+id/searchIconImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Buscar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:scaleType="centerInside" />

                <!-- Icono de mapa -->
                <ImageView
                    android:id="@+id/mapIconImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_map"
                    android:contentDescription="Ver mapa"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:scaleType="centerInside" />

                <!-- Icono de perfil -->
                <ImageView
                    android:id="@+id/profileIconImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="Perfil"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <!-- Barra de búsqueda (inicialmente oculta) -->
            <LinearLayout
                android:id="@+id/searchBarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/search_bar_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search_small"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Buscar" />

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Buscar aulas, oficinas, laboratorios..."
                    android:textSize="16sp"
                    android:textColorHint="#9E9E9E"
                    android:textColor="#2E3A59"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionSearch" />

                <ImageView
                    android:id="@+id/clearSearchImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear"
                    android:contentDescription="Limpiar búsqueda"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Contenido principal con RecyclerView -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- RecyclerView para las cards de lugares -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/placesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_place_card" />

            <!-- Estado vacío -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_empty_state"
                    android:contentDescription="Sin lugares"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No se encontraron lugares"
                    android:textSize="18sp"
                    android:textColor="#757575"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Intenta con otro término de búsqueda"
                    android:textSize="14sp"
                    android:textColor="#9E9E9E" />

            </LinearLayout>

            <!-- Indicador de carga -->
            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>