<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routeCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con icono y nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/routeIconImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_directions"
                android:tint="@color/primary"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/routeNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrada Principal â†’ CafeterÃ­a Principal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Entrada Principal â†’ CafeterÃ­a Principal" />

                <TextView
                    android:id="@+id/routeDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ruta rÃ¡pida a la cafeterÃ­a para una comida rÃ¡pida"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="2dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    tools:text="Ruta rÃ¡pida a la cafeterÃ­a para una comida rÃ¡pida" />

            </LinearLayout>

        </LinearLayout>

        <!-- InformaciÃ³n de la ruta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Distancia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_distance"
                    android:tint="@color/textSecondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="280 m"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    tools:text="280 m" />

            </LinearLayout>

            <!-- Tiempo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    android:tint="@color/textSecondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 min"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    tools:text="4 min" />

            </LinearLayout>

            <!-- Dificultad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_difficulty"
                    android:tint="@color/textSecondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/difficultyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FÃ¡cil"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_green_dark"
                    tools:text="FÃ¡cil" />

            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ratingStarImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/ratingColor"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 (12)"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    tools:text="4.5 (12)" />

            </LinearLayout>

        </LinearLayout>

        <!-- BotÃ³n de navegaciÃ³n -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navigateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§­ Usar esta ruta"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="8dp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>