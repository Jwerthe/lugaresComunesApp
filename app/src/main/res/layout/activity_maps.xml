<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <!-- Mapa principal -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <!-- Toolbar transparente sobre el mapa -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_gradient_background"
            android:paddingTop="20dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Mapa del Campus"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Botón flotante para centrar en mi ubicación -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Mi ubicación"
        app:srcCompat="@drawable/ic_my_location"
        app:tint="@android:color/white" />

    <!-- Botón para cambiar tipo de mapa -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="Tipo de mapa"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_layers"
        app:tint="@android:color/white" />

    <!-- Card con información del lugar seleccionado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/placeInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Icono del tipo de lugar -->
            <ImageView
                android:id="@+id/placeTypeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background_blue"
                android:padding="12dp"
                android:src="@drawable/ic_classroom" />

            <!-- Información del lugar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/placeNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aula A-101"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3A59" />

                <TextView
                    android:id="@+id/placeCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/category_tag_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Aula"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/placeWhat3wordsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="📍 música.ejemplo.libertad"
                    android:textSize="14sp"
                    android:textColor="#E91E63"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Botón para ver detalles -->
            <ImageView
                android:id="@+id/placeDetailsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_forward"
                android:contentDescription="Ver detalles" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>