<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".RoutesActivity">

    <!-- App Bar con imagen del lugar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="bottom|start"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginTop="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="?attr/colorPrimaryDark">

            <!-- Imagen de fondo del lugar -->
            <ImageView
                android:id="@+id/placeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightGray"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_place_image"
                app:layout_collapseMode="parallax" />

            <!-- Overlay gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"
                app:title="Lugar y Rutas" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ✅ NUEVA SECCIÓN: Detalles del lugar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header con icono y nombre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/placeTypeIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background_blue"
                            android:src="@drawable/ic_classroom"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/placeNameTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cafetería Principal"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/textPrimary" />

                            <TextView
                                android:id="@+id/placeCategoryTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cafetería"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:background="@drawable/category_tag_background_green"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Indicador de disponibilidad -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/placeAvailabilityIndicator"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/circle_background_green"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/placeAvailabilityTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disponible"
                                android:textSize="12sp"
                                android:textColor="@android:color/holo_green_dark" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/placeDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cafetería principal del campus con variedad de comidas y bebidas."
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Información adicional -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/placeWhat3wordsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📍 comida.campus.sabor"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/placeScheduleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🕒 Lunes a Viernes: 7:00 - 18:00"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/placeCapacityTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="👥 Capacidad: 80 personas"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ SECCIÓN DE RUTAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Título de la sección de rutas -->
                <TextView
                    android:id="@+id/routesSectionTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗺️ Rutas disponibles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="12dp" />

                <!-- Contenido principal de rutas -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp">

                    <!-- Loading indicator -->
                    <ProgressBar
                        android:id="@+id/loadingProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <!-- RecyclerView para las rutas -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/routesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="visible"
                        tools:listitem="@layout/item_route" />

                    <!-- Empty state -->
                    <LinearLayout
                        android:id="@+id/emptyStateContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_no_routes"
                            android:alpha="0.5"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/emptyStateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No hay rutas disponibles hacia este destino"
                            android:textSize="16sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Intenta más tarde o verifica tu conexión a internet"
                            android:textSize="14sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Espaciado inferior -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>